@inherits LayoutComponentBase

<div class="page" style="width: 750px; margin: 0 auto">
    <main style="max-width: 750px;">
        <div class="top-row px-4" style="background-color: #2F4A73; height: 63px">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>


        <div class="container text-center">
            <div class="row">
                <div class="col p-0">
                    <button style="width: 100%">button 1</button>
                </div>
                <div class="col p-0">
                    <button style="width: 100%">button 2</button>
                </div>
                <div class="col p-0">
                    <button style="width: 100%">button 3</button>
                </div>
                <div class="col p-0">
                    <button style="width: 100%">button 4</button>
                </div>
                <div class="col p-0">
                    <button style="width: 100%">button 5</button>
                </div>
            </div>
        </div>

        <article class="content p-0 bg-white" style="width: 100%; padding: 0 0 0 0 !important;">
            @Body
        </article>
        
        <div id="Footer">
            <div class="px-4" style="background-color: #2F4A73; height: 44px; text-align: center">
                <p class="text-white" style="font-weight: lighter; padding-top: 10px">All rights reserved to NietTeDoen</p>
            </div>
        </div>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>